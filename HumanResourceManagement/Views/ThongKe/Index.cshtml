@model IEnumerable<HumanResourceManagement.Models.ThongKe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto mt-6">

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <!-- Thống kê giới tính -->
        <a href="@Url.Action("GioiTinh", "ThongKe")"
           class="flex flex-col items-center justify-center gap-3 bg-green-600 text-white px-6 py-5 rounded-xl shadow-lg hover:bg-green-700 hover:scale-105 transition-all">
            <i class="fas fa-venus-mars text-3xl"></i>
            <span class="text-lg font-medium">Thống kê </span>
        </a>

        <!-- Thống kê địa chỉ -->
        <a href="@Url.Action("DiaChi", "ThongKe")"
           class="flex flex-col items-center justify-center gap-3 bg-yellow-500 text-white px-6 py-5 rounded-xl shadow-lg hover:bg-yellow-600 hover:scale-105 transition-all">
            <i class="fas fa-map-marker-alt text-3xl"></i>
            <span class="text-lg font-medium">Thống kê địa chỉ</span>
        </a>

        <!-- Tra cứu nhân viên -->
        <a href="@Url.Action("TraCuu", "ThongKe")"
           class="flex flex-col items-center justify-center gap-3 bg-blue-600 text-white px-6 py-5 rounded-xl shadow-lg hover:bg-blue-700 hover:scale-105 transition-all">
            <i class="fas fa-search text-3xl"></i>
            <span class="text-lg font-medium">Tra cứu nhân viên</span>
        </a>

        <!-- Thống kê phòng ban -->
        <a href="@Url.Action("PhongBan", "ThongKe")"
           class="flex flex-col items-center justify-center gap-3 bg-orange-500 text-white px-6 py-5 rounded-xl shadow-lg hover:bg-orange-600 hover:scale-105 transition-all">
            <i class="fas fa-building text-3xl"></i>
            <span class="text-lg font-medium">Thống kê phòng ban</span>
        </a>

        <!-- Thống kê làm việc -->
        <a href="@Url.Action("ThongKeNhanVien", "ThongKe")"
           class="flex flex-col items-center justify-center gap-3 bg-orange-500 text-white px-6 py-5 rounded-xl shadow-lg hover:bg-orange-600 hover:scale-105 transition-all">
            <i class="fas fa-tasks text-3xl"></i>
            <span class="text-lg font-medium">Thống kê làm việc</span>
        </a>
    </div>
</div>

<style>
    a {
        text-decoration: none;
    }
</style>
