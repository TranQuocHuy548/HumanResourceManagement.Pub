<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>
        QUẢN LÝ NHÂN SỰ
    </title>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <!-- Thêm liên kết đến Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="bg-blue-900 text-white w-64 space-y-6 py-7 px-2 fixed h-full">
            <div class="text-center">
                <img alt="Company logo placeholder image" class="mx-auto mb-4" height="100" src="https://storage.googleapis.com/a1aa/image/e4lMOAJKTV5f3U0B7FkQu3kDOt4RLIRQH0-pwDbinbg.jpg" width="100" />
                <h1 class="text-2xl font-semibold">
                    QUẢN LÝ NHÂN SỰ
                </h1>
            </div>
            <nav>
                <a class="block py-2.5 px-4 rounded transition duration-200 hover:bg-blue-800
        @(ViewContext.RouteData.Values["controller"].ToString() == "DashB" ? "bg-blue-800 font-bold" : "")"
                   href="@Url.Action("Index", "DashB")">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>

                <a class="block py-2.5 px-4 rounded transition duration-200 hover:bg-blue-800
        @(ViewContext.RouteData.Values["controller"].ToString() == "NhanVien" ? "bg-blue-800 font-bold" : "")"
                   href="@Url.Action("Index", "NhanVien")">
                    <i class="fas fa-users"></i> Quản lý nhân sự
                </a>

                <a class="block py-2.5 px-4 rounded transition duration-200 hover:bg-blue-800
        @(ViewContext.RouteData.Values["controller"].ToString() == "PhongBan" ? "bg-blue-800 font-bold" : "")"
                   href="@Url.Action("Index", "PhongBan")">
                    <i class="fas fa-building"></i> Quản lý phòng ban
                </a>

                <a class="block py-2.5 px-4 rounded transition duration-200 hover:bg-blue-800
        @(ViewContext.RouteData.Values["controller"].ToString() == "ChucVu" ? "bg-blue-800 font-bold" : "")"
                   href="@Url.Action("Index", "ChucVu")">
                    <i class="fas fa-user-shield"></i> Quản lý chức vụ
                </a>

                <a class="block py-2.5 px-4 rounded transition duration-200 hover:bg-blue-800
        @(ViewContext.RouteData.Values["controller"].ToString() == "ChamCong" ? "bg-blue-800 font-bold" : "")"
                   href="@Url.Action("Index", "ChamCong")">
                    <i class="fas fa-clock"></i> Quản lý chấm công
                </a>

                <a class="block py-2.5 px-4 rounded transition duration-200 hover:bg-blue-800
        @(ViewContext.RouteData.Values["controller"].ToString() == "ThongKe" ? "bg-blue-800 font-bold" : "")"
                   href="@Url.Action("Index", "ThongKe")">
                    <i class="fas fa-file-alt"></i> Thống Kê & Tra cứu
                </a>
                <a class="block py-2.5 px-4 rounded transition duration-200 hover:bg-blue-800
        @(ViewContext.RouteData.Values["controller"].ToString() == "LuongNV" ? "bg-blue-800 font-bold" : "")"
                   href="@Url.Action("TinhLuong", "Luong")">
                    <i class="fas fa-money-bill"></i> Quản lý lương
                </a>

                <a class="block py-2.5 px-4 rounded transition duration-200 hover:bg-blue-800
        @(ViewContext.RouteData.Values["controller"].ToString() == "CaiDat" ? "bg-blue-800 font-bold" : "")"
                   href="#">
                    <i class="fas fa-cogs"></i> Cài đặt
                </a>

                <a class="block py-2.5 px-4 rounded transition duration-200 hover:bg-blue-800
        @(ViewContext.RouteData.Values["controller"].ToString() == "DangNhap" ? "bg-blue-800 font-bold" : "")"
                   href="@Url.Action("Index", "DangNhap")">
                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                </a>
            </nav>



        </div>
        <!-- Main content -->
        <div class="flex-1 p-10 ml-64">
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <div class="flex justify-between items-center mb-4">


                </div>
                <div style="max-height: 1000px; overflow-y: auto;">
                    <table class="min-w-full bg-white">
                        @RenderBody()
                        @RenderSection("Scripts", required: false)

                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<style>
    .bg-blue-900 {
        height: 100vh; /* Chiều cao full màn hình */
        overflow-y: auto; /* Thêm thanh cuộn nếu nội dung dài */
    }
</style>