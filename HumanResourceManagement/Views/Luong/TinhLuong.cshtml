@model List<HumanResourceManagement.Models.LuongViewModel>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h2 class="m-0 font-weight-bold text-primary">Bảng Lương Tháng @ViewBag.Thang/@ViewBag.Nam</h2>
            <div class="btn-group">
                <button class="btn btn-success" onclick="window.location.href='@Url.Action("XuatExcelLuong", "Luong", new { thang = ViewBag.Thang, nam = ViewBag.Nam })'">
                    <i class="fas fa-file-excel"></i> Xuất Excel
                </button>
            </div>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("TinhLuong", "Luong", FormMethod.Get, new { @class = "form-inline mb-4" }))
            {
                <div class="form-group mr-3">
                    <label class="mr-2">Tháng:</label>
                    @Html.TextBox("thang", ((int?)ViewBag.Thang ?? DateTime.Now.Month).ToString(),
                        new { @class = "form-control", type = "number", min = "1", max = "12", style = "width: 80px" })
                </div>

                <div class="form-group mr-3">
                    <label class="mr-2">Năm:</label>
                    @Html.TextBox("nam", ((int?)ViewBag.Nam ?? DateTime.Now.Year).ToString(),
                        new { @class = "form-control", type = "number", style = "width: 100px" })
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Xem bảng lương
                </button>
            }

            <!-- Bảng lương tháng -->
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="salaryTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Mã NV</th>
                            <th>Tên Nhân Viên</th>
                            <th>Chức Vụ</th>
                            <th class="text-right">Lương Theo Giờ</th>
                            <th class="text-right">Giờ Làm</th>
                            <th class="text-right">OT</th>
                            <th class="text-right">Lương Chính</th>
                            <th class="text-right">Lương OT</th>
                            <th class="text-right text-success">Tổng Lương</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaNhanVien</td>
                                <td>@item.TenNhanVien</td>
                                <td>@item.TenChucVu</td>
                                <td class="text-right">@item.LuongTheoGio.ToString("N0")</td>
                                <td class="text-right">@item.TongGioLam.ToString("N2")</td>
                                <td class="text-right">@item.TongGioOT.ToString("N2")</td>
                                <td class="text-right">@item.LuongChinh.ToString("N0")</td>
                                <td class="text-right">@item.LuongOT.ToString("N0")</td>
                                <td class="text-right font-weight-bold text-success">@item.TongLuong.ToString("N0")</td>
                            </tr>
                        }
                    </tbody>
                    @if (Model.Any())
                    {
                        <tfoot>
                            <tr class="bg-light">
                                <td colspan="8" class="font-weight-bold text-right">Tổng cộng</td>
                                <td class="text-right font-weight-bold text-success">@Model.Sum(x => x.TongLuong).ToString("N0")</td>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>

            <!-- Bảng lương hôm nay -->
            @if (ViewBag.LuongHomNay != null && ((List<HumanResourceManagement.Models.LuongViewModel>)ViewBag.LuongHomNay).Any())
            {
                <hr />
                <h4 class="mt-4 text-info">Lương hôm nay (@ViewBag.Ngay)</h4>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="todaySalaryTable" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th>Mã NV</th>
                                <th>Tên Nhân Viên</th>
                                <th>Chức Vụ</th>
                                <th class="text-right">Lương Theo Giờ</th>
                                <th class="text-right">Giờ Làm</th>
                                <th class="text-right">OT</th>
                                <th class="text-right">Lương Chính</th>
                                <th class="text-right">Lương OT</th>
                                <th class="text-right text-success">Tổng Lương</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in (List<HumanResourceManagement.Models.LuongViewModel>)ViewBag.LuongHomNay)
                            {
                                <tr>
                                    <td>@item.MaNhanVien</td>
                                    <td>@item.TenNhanVien</td>
                                    <td>@item.TenChucVu</td>
                                    <td class="text-right">@item.LuongTheoGio.ToString("N0")</td>
                                    <td class="text-right">@item.TongGioLam.ToString("N2")</td>
                                    <td class="text-right">@item.TongGioOT.ToString("N2")</td>
                                    <td class="text-right">@item.LuongChinh.ToString("N0")</td>
                                    <td class="text-right">@item.LuongOT.ToString("N0")</td>
                                    <td class="text-right font-weight-bold text-success">@item.TongLuong.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="bg-light">
                                <td colspan="8" class="font-weight-bold text-right">Tổng cộng hôm nay</td>
                                <td class="text-right font-weight-bold text-success">
                                    @(((List<HumanResourceManagement.Models.LuongViewModel>)ViewBag.LuongHomNay).Sum(x => x.TongLuong).ToString("N0"))
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#salaryTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json"
                },
                "dom": '<"top"f>rt<"bottom"lip><"clear">',
                "pageLength": 25
            });

            $('#todaySalaryTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json"
                },
                "dom": '<"top"f>rt<"bottom"lip><"clear">',
                "pageLength": 10
            });
        });
    </script>

    <style>
        .dataTables_filter input {
            border-radius: 4px;
            border: 1px solid #ddd;
            padding: 5px 10px;
        }

        .table th {
            white-space: nowrap;
            vertical-align: middle;
        }

        .table td {
            vertical-align: middle;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .form-inline .form-control {
            display: inline-block;
            vertical-align: middle;
        }
    </style>
}
